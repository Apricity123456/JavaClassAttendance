<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER" spacing="20" style="-fx-padding: 20; -fx-background-color: #f9f9f9;">

    <TableView fx:id="studentTable" prefHeight="400" prefWidth="600">
        <columns>
            <TableColumn text="Student ID" prefWidth="150" />
            <TableColumn text="Name" prefWidth="200" />
            <TableColumn text="Age" prefWidth="100" />
            <TableColumn text="Class" prefWidth="150" />
        </columns>
    </TableView>

    <VBox spacing="10" alignment="CENTER">
        <Button text="Add Student" style="-fx-background-color: #2ECC71; -fx-text-fill: white;" />
        <Button text="Edit Student" style="-fx-background-color: #3498DB; -fx-text-fill: white;" />
        <Button text="Delete Student" style="-fx-background-color: #E74C3C; -fx-text-fill: white;" />
    </VBox>
</VBox>
