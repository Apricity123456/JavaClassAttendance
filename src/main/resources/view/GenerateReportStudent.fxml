<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.GenerateReportStudentController"
      spacing="20" style="-fx-padding: 20; -fx-alignment: center;">

    <Label text="Generate Report" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    <Label text="Select Report Type:" />
    <ChoiceBox fx:id="reportTypeChoiceBox" />
    <Button text="Generate Report" onAction="#generateReport"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
</VBox>
