<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.GenerateReportController"
      spacing="15" alignment="CENTER">

    <Label text="Generate Report" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Select Report Type:"/>
        <ChoiceBox fx:id="reportTypeChoiceBox"/>
    </HBox>

    <Button text="Generate Report" onAction="#generateReport"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>

</VBox>
