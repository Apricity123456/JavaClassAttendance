<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml"
      spacing="20" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #f9f9f9;">

    <HBox spacing="10">
        <TextField fx:id="searchField" promptText="Search Course..." prefWidth="300" />
        <Button text="Search" style="-fx-background-color: #2ECC71; -fx-text-fill: white;" />
    </HBox>

    <TableView fx:id="courseTable" prefHeight="400" prefWidth="600">
        <columns>
            <TableColumn text="Course ID" prefWidth="150" />
            <TableColumn text="Course Name" prefWidth="300" />
            <TableColumn text="Instructor" prefWidth="150" />
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button text="Add Course" style="-fx-background-color: #2ECC71; -fx-text-fill: white;" />
        <Button text="Edit Course" style="-fx-background-color: #3498DB; -fx-text-fill: white;" />
        <Button text="Delete Course" style="-fx-background-color: #E74C3C; -fx-text-fill: white;" />
    </HBox>
</VBox>
